<!DOCTYPE html>     
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge"> 
    <link rel="stylesheet" href="/css/main.css">
    <script src="/js/common.js"></script>
</head>
<body>
    <nav id="navigation">
        <div id="top-logo">
            <a href="#">
                <img src="/img/nodejs-icon.png" alt="">
            </a>
        </div>
        <div id="nav-flex">
            <a href="#setting">Setting</a>
            <a href="#code">Write Code</a>
            <a href="#example">Example</a>
            <a href="#about-us">About Us</a>
        </div>
    </nav>
    <div id="content">
        <div id="sidebar">
            <div id="member-box">
                
                <% if(user === null) { %> 
                    <div class="login-before">
                        <div class="login-button-box">
                            <button class="login-button" onclick="movePage('/member/login')">Login</button>
                        </div>                    
                    </div>
                <% } else { %>
                    <div class="login-after">
                        <div class="information">
                            <p class="user-id"><%= user.user_id %> 님 </p>
                        </div> 
                        <div class="logout-button-box">
                            <button class="logout-button ajaxsend">logout</button>
                        </div>
                    </div>
                <% } %>

            </div>
        </div>
    </div>

    <script>
        if(document.querySelector('.ajaxsend') !== null) {
            document.querySelector('.ajaxsend').addEventListener('click', function() {
                console.log("break");
                sendAjax('http://localhost:3000/member/logout');
            });
        }
        
    
        function sendAjax(url) {
            let xhr = new XMLHttpRequest();

            xhr.open('POST', url);
            xhr.setRequestHeader('Content-Type', "application/json");
            xhr.send();

            xhr.addEventListener('load', function() {
                location.reload();
                /* 로그인 결과를 출력 할려고하는 엘리먼트 */
            });
        }
    </script>
</body>
</html>