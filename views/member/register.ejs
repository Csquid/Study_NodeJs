<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>register</title>
    <link rel="stylesheet" href="/css/member/common.css">
    <link rel="stylesheet" href="/css/member/register.css">
    <script src="/js/common.js"></script>
    <script src="/js/member/common.js"></script>
</head>

<body>
    <div id="container">
        <img id="node-icon-img" src="/img/nodejs-icon.png">
        <p id="register-error-message">
            <%= message %>
        </p>
        <p class="register-preface-title">üìå: Î¨¥Ï°∞Í±¥ Ï†ÅÏñ¥Ïïº Ìï©ÎãàÎã§.</p>

        <!-- id -->
        <div class="member-form-box">
            <h2 class="member-input-title">
                üìå id
            </h2>
            <div class="member-input-box">
                <input type="text" id="register-id" name="id" maxlength="20" autocomplete="off">
            </div>
            <p id="welcome-not-overlap-id", class="hidden welcome">
                Welcome!
            </p>
            <p id="err-id" class="register-error-message">
            </p>
        </div>

        <!-- password 1 -->
        <div class="member-form-box">
            <h2 class="member-input-title">
                üìå Password
            </h2>
            <div class="member-input-box">
                <input type="password" id="register-pw-1" name="pw_1" maxlength="20">
            </div>
            <p id="err-pw1" class="register-error-message">
            </p>
        </div>

        <!-- password 2 -->
        <div class="member-form-box"> 
            <h2 class="member-input-title">
                üìå Password Confirm
            </h2>
            <div class="member-input-box">
                <input type="password" id="register-pw-2" name="pw_2" maxlength="20">
            </div>
            <p id="err-pw2" class="register-error-message">
            </p>
        </div>

        <!-- name -->
        <div class="member-form-box">
            <h2 class="member-input-title">
                Name
            </h2>
            <div class="member-input-box">
                <input type="text" id="register-name" name="name" autocomplete="off">
            </div>
        </div>

        <!-- Email -->
        <div class="member-form-box">
            <h2 class="member-input-title">
                Email
            </h2>
            <div class="member-input-box">
                <input type="text" id="register-email" name="email" autocomplete="off">
            </div>
            <p id="err-email" class="register-error-message">
            </p>
            <p id="welcome-not-overlap-email" class="hidden welcome">
                Welcome!
            </p>
        </div>

        <!-- address -->
        <div class="member-form-box">
            <h2 class="member-input-title">
                Address
            </h2>
            <div class="member-input-box">
                <input type="text" id="register-address" name="address" autocomplete="off">
            </div>
        </div>

        <!-- gender -->
        <div class="member-form-box">
            <h2 class="member-input-title">
                Gender
            </h2>
            <div class="member-input-box">
                <select name="gender" id="register-gender">
                    <option value="gender">gender</option>
                    <option value="man">man</option>
                    <option value="woman">woman</option>
                </select>
            </div>
        </div>

        <!-- register-button -->
        <div id="member-button-box">
            <!-- Sign up -->
            <button type="submit" class="member-button" id="member-button-submit"> Sign Up </button>
            <!-- Cancle -->
            <button type="button" class="member-button" id="member-button-cancle" onclick="movePage('back')"> Cancle
            </button>
        </div>
    </div>

    <script src="/js/member/register.js"></script>
</body>

</html>